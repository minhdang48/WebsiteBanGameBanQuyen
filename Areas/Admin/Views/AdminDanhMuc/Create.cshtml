@model BanGameBanQuyen.Models.DanhMucSp

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Thêm Mới</h1>

<h4>Danh Mục</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenDm" class="control-label">Tên Danh Mục</label>
                <input asp-for="TenDm" class="form-control" />
                <span asp-validation-for="TenDm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnhDm" class="control-label">Link Ảnh Danh Mục</label>
                <input asp-for="AnhDm" class="form-control" />
                <span asp-validation-for="AnhDm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTaDm" class="control-label">Mô Tả Danh Mục</label>
                <input asp-for="MoTaDm" class="form-control" />
                <span asp-validation-for="MoTaDm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="TrangThai" type="checkbox" />
                <small>Hiển thị danh mục</small>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm Mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

